{% extends 'base.html.jinja' %}

{% block header %}
<h1>Actions and inventory</h1>
{% endblock %}

{% block content %}
    {% if profile.characters.all() %}
    Your characters:
    <ul>
    {% for character in profile.characters.all() %}
        <li><a class="action" href="{{ url_for('character.view', id=character.id) }}">{{ character.title }}</a> [<a href="{{ url_for('character.editjson', id=character.id) }}">Edit JSON</a>]</li>
    {% endfor %}
    </ul>
    {% endif %}
    <div>
        <a class="action" href="{{ url_for('character.create', chartype='coc') }}">Create a new character</a><br />
        <a class="action" href="{{ url_for('character.import_character') }}">Import a character</a><br />
    </div>
{% endblock %}
