{% extends 'base.html.jinja' %}

{% block header %}
  <h1>{% block title %}New Character{% endblock %}</h1>
{% endblock %}

{% block content %}
  {% if type == "coc" %}
    {% include 'character/coc_create.html.jinja' %}
  {% else %}
  <form action="" method="post">
    {{ form.hidden_tag() }}
        <p>
          {{ form.title.label }}<br>
          {{ form.title(size=32) }}<br>
          {% for error in form.title.errors %}
          <span style="color: red;">[{{ error }}]</span>
          {% endfor %}
      </p>
      <p>
          {{ form.body.label }}<br>
          {{ form.body() }}<br>
          {% for error in form.body.errors %}
          <span style="color: red;">[{{ error }}]</span>
          {% endfor %}
      </p>        
      <p>{{ form.submit() }}</p>
  </form>
  {% endif %}
{% endblock %}
