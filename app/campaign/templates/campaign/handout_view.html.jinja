{% extends 'shell.html.jinja' %}

{% block head %}
    {{ super() }}

    {% assets "scss_handout" %}
    <link rel=stylesheet type=text/css href="{{ ASSET_URL }}">
    {% endassets %}

    {% assets "ts_handout" %}
        <script type="text/javascript" src="{{ ASSET_URL }}"></script>
    {% endassets %}
{% endblock head %}
{% block header %}
    <h2>Handout '{{ handout.title }}'</h2>
{% endblock %}


{% block body %}
    <div class="markdown">
        {{ handout.content|markdown }}
    </div>
{% endblock %}