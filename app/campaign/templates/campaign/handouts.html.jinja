{% extends 'base.html.jinja' %}
{% block head %}
{% assets filters="pyscss", output="handout.css",
          "scss/handout.scss" %}
        <link rel=stylesheet type=text/css href="{{ ASSET_URL }}">
{% endassets %}
{% endblock %}

{% block header %}
    <h2>Handouts for '{{ campaign.title }}'</h2>
{% endblock %}


{% block content %}
    <section class="handouts">
    <ul>
    {% for handout in handouts %}
    <li>
        <a href="{{Â url_for('campaign.handout_view', campaign_id=campaign.id, handout_id=handout.id) }}">{{ handout.title }}</a>
         [ <a href="{{ url_for('campaign.handout_delete', campaign_id=campaign.id, handout_id=handout.id) }}">Delete</a> ]
    </li>
    {% endfor %}
    <ul>
    </section>

    {% if editable %}
    <section class="create">
        <form action="" method="post">
            {{ form.hidden_tag() }}
                <p>
                {{ form.title.label }}<br>
                {{ form.title(size=32) }}<br>
                {% for error in form.title.errors %}
                <span style="color: red;">[{{ error }}]</span>
                {% endfor %}
            </p>
            <p>{{ form.submit() }}</p>
        </form>
    </section>
    {% endif %}
{% endblock %}